# ============================================
# LARAVEL PRODUCTION ENVIRONMENT
# ============================================
#
# This file is mounted into PHP container as /var/www/html/.env
# Copy to .env.production on the production server:
#   cp .env.production.example .env.production
#
# GitHub Secrets needed:
#   - APP_KEY (generate with: php artisan key:generate --show)
#   - DB_PASSWORD
#   - MAIL_PASSWORD (if using SMTP)
#   - Any other service API keys
#
# ============================================

# ----------------------------------------
# APPLICATION
# ----------------------------------------
APP_NAME=Workouts
APP_ENV=production
APP_KEY=                            # REQUIRED: GitHub Secret APP_KEY
APP_DEBUG=false                     # NEVER true in production!
APP_URL=https://workouts.example.com  # Your actual domain

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# ----------------------------------------
# LOGGING
# ----------------------------------------
# In production, use 'stack' with 'single' or 'daily'
# Avoid 'debug' level - too verbose, fills disk
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error                     # error, warning, info (not debug!)

# ----------------------------------------
# DATABASE
# ----------------------------------------
# Host is 'mysql' = Docker service name (not 127.0.0.1)
DB_CONNECTION=mysql
DB_HOST=mysql                       # Docker service name
DB_PORT=3306
DB_DATABASE=workouts
DB_USERNAME=workouts
DB_PASSWORD=                        # REQUIRED: GitHub Secret DB_PASSWORD

# ----------------------------------------
# REDIS
# ----------------------------------------
# Host is 'redis' = Docker service name
# Used for: cache, sessions, queues (faster than database)
REDIS_CLIENT=phpredis
REDIS_HOST=redis                    # Docker service name
REDIS_PASSWORD=null                 # Set if Redis has auth enabled
REDIS_PORT=6379

# ----------------------------------------
# CACHE
# ----------------------------------------
# Use Redis in production (faster than database/file)
CACHE_STORE=redis
CACHE_PREFIX=workouts_cache_

# ----------------------------------------
# SESSION
# ----------------------------------------
# Use Redis for sessions (faster, scales across servers)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true                # Encrypt session data
SESSION_PATH=/
SESSION_DOMAIN=.example.com         # Include dot for subdomains, or null
SESSION_SECURE_COOKIE=true          # HTTPS only

# ----------------------------------------
# QUEUE
# ----------------------------------------
# Use Redis for queues (Horizon requires Redis)
QUEUE_CONNECTION=redis

# ----------------------------------------
# FILESYSTEM
# ----------------------------------------
FILESYSTEM_DISK=local

# ----------------------------------------
# MAIL
# ----------------------------------------
# Configure for your mail provider (Mailgun, SES, SMTP, etc.)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org          # Or your SMTP host
MAIL_PORT=587
MAIL_USERNAME=                      # GitHub Secret or hardcode
MAIL_PASSWORD=                      # GitHub Secret MAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# ----------------------------------------
# AWS (if using S3 for storage)
# ----------------------------------------
# AWS_ACCESS_KEY_ID=                # GitHub Secret
# AWS_SECRET_ACCESS_KEY=            # GitHub Secret
# AWS_DEFAULT_REGION=eu-central-1
# AWS_BUCKET=workouts-prod
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ----------------------------------------
# SECURITY
# ----------------------------------------
BCRYPT_ROUNDS=12                    # 12 is good balance of security/speed

# ----------------------------------------
# VITE
# ----------------------------------------
VITE_APP_NAME="${APP_NAME}"
